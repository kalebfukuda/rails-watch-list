<div class="container">
  <div onclick="document.getElementById('bookmarkId').classList.toggle('display-div')"
    style="width:fit-content;cursor:pointer;text-align:center;align-items:center;"
    class="d-flex">
    <h1 class="me-2 text-cine"> <%= @list.name %></h1>
    <i class="fa-solid fa-circle-plus text-cine h3"></i>
  </div>
  <div id="bookmarkId"
    class="display-div"
    >
    <div class="container">
      <div class="d-flex col-5 shadow-sm p-4 mb-4 justify-content-center bg-form form-border">
        <%= render 'bookmarks/form', bookmark:@bookmark %>
      </div>
    </div>
  </div>
  <% unless @list.bookmarks.size.zero? %>
    <div class="cards mb-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="bg-white shadow-sm rounded card-position">
          <div class="card-category rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3),
          rgba(0,0,0,0.3)), url(<%= asset_url(bookmark.movie.poster_url) %>)">
            <%= link_to bookmark_path(bookmark), class: "card-delete",
            data: { turbo_method: :delete, turbo_confirm: "Remove #{bookmark.movie.title}?"} do  %>
              <i class="fa-solid fa-trash text-white"></i>
            <% end %>
            <%= bookmark.movie.title %>
          </div>
          <div class="p-3">
            <div class="mb-2">
              <i class="fa-solid fa-star text-cine"></i> <%= bookmark.movie.rating.round(1) %>/10
            </div>
            <p class="card-category-p-font">
              <%= bookmark.movie.overview %>
            </p>
            <div class="d-flex">
              <div class="vr mb-3">
              </div>
              <div class="ms-2">
                <p>"<%= bookmark.comment %>"</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <%= image_tag "empty-box.png", alt: "text", style: "display:table;margin:auto;" %>
  <% end %>
</div>
