<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
  url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path("list_1.jpg") %>);">
  <div class="container text-center justify-content-center">
    <p class="t-size"> <%= @list.name %></p>
  </div>
</div>
<div class="container">
  <button type="button" class="btn btn-cine mb-3" data-bs-toggle="modal" data-bs-target="#addBookmark">
    <i class="fa-solid fa-plus"></i>
    Add Bookmark!
  </button>
  <% unless @list.bookmarks.size.zero? %>
    <div class="cards mb-4">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="bg-white shadow-sm rounded card-position">
          <div class="card-category rounded" style="background-image: linear-gradient(rgba(0,0,0,0.3),
          rgba(0,0,0,0.3)), url(<%= asset_url(bookmark.movie.poster_url) %>)">
            <%= link_to bookmark_path(bookmark), class: "card-delete",
            data: { turbo_method: :delete, turbo_confirm: "Remove #{bookmark.movie.title}?"} do  %>
              <i class="fa-solid fa-trash text-white"></i>
            <% end %>
            <%= bookmark.movie.title %>
          </div>
          <div class="p-3">
            <div class="mb-2">
              <i class="fa-solid fa-star text-cine"></i> <%= bookmark.movie.rating.round(1) %>/10
            </div>
            <p class="card-category-p-font">
              <%= bookmark.movie.overview %>
            </p>
            <div class="d-flex">
              <div class="vr mb-3">
              </div>
              <div class="ms-2">
                <p>"<%= bookmark.comment %>"</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="col-12">
      <%= image_tag "empty-box.png", alt: "text", style: "display:table;margin:auto;" %>
    </div>
  <% end %>
</div>
<div id="addBookmark" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New Bookmark!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'bookmarks/form', bookmark:@bookmark %>
      </div>
    </div>
  </div>
</div>
<% if @show_modal %>
  <script>
    var myModal = new bootstrap.Modal(document.getElementById('addBookmark'));
    myModal.show();
  </script>
<% end %>
